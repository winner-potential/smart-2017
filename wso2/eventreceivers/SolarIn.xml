<?xml version="1.0" encoding="UTF-8"?>
<eventReceiver name="SolarReceiver" statistics="disable" trace="disable" xmlns="http://wso2.org/carbon/eventreceiver">
    <from eventAdapterType="http">
        <property name="transports">all</property>
        <property name="basicAuthEnabled">true</property>
    </from>
    <mapping customMapping="enable" type="json">
        <property>
            <from jsonPath="$.time"/>
            <to default="2016-01-01T15:00:00+00:00" name="time" type="string"/>
        </property>
        <property>
            <from jsonPath="$.energy"/>
            <to default="0" name="value" type="double"/>
        </property>
        <property>
            <from jsonPath="$.station"/>
            <to default="station1" name="station" type="string"/>
        </property>
        <property>
            <from jsonPath="$.id"/>
            <to default="0" name="id" type="string"/>
        </property>
    </mapping>
    <to streamName="SolarRaw" version="1.0.0"/>
</eventReceiver>
